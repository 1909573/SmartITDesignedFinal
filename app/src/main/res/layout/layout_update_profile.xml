<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:id="@+id/chgPassword"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chgPassword"
        android:background="@drawable/custom_border"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Password :"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:id="@+id/textold"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/currentPassTB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_below="@+id/textold"
            android:drawableLeft="@drawable/ic_action_darklock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password :"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:id="@+id/textnew"
            android:layout_below="@+id/currentPassTB"
            android:layout_marginTop="22dp"/>

        <EditText
            android:id="@+id/newPassTB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword"
            android:layout_below="@+id/textnew"
            android:drawableLeft="@drawable/ic_action_darklock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password :"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:id="@+id/textcmf"
            android:layout_below="@+id/newPassTB"
            android:layout_marginTop="20dp" />


        <EditText
            android:id="@+id/confirmPassTB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:layout_below="@+id/textcmf"
            android:drawableLeft="@drawable/ic_action_darklock"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/confirmPassTB">

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:background="@drawable/button_login"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>