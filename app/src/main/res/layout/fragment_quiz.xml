<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/quiz"
        android:id="@+id/imgView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Quiz"
        android:layout_below="@+id/imgView"
        android:id="@+id/textShow"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/imgView_line1"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textShow"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border"
        android:layout_below="@+id/imgView_line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

    <Button
        android:id="@+id/subject1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C++"
        android:background="@drawable/button_login"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/subject2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAVA"
        android:layout_below="@+id/subject1Btn"
        android:background="@drawable/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>